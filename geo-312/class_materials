        "#Write a while loop that continues to print the coordinates in a list until a coordinate with a latitude less than 0 is found.\n",
        "\n",
        "coordinates = [\n",
        "    {\"name\": \"New York\", \"coordinates\": (40.7128, -74.0060)},\n",
        "    {\"name\": \"London\", \"coordinates\": (51.5074, -0.1278)},\n",
        "    {\"name\": \"Sydney\", \"coordinates\": (-33.8688, 151.2093)},\n",
        "    {\"name\": \"Tokyo\", \"coordinates\": (35.6895, 139.6917)},\n",
        "    {\"name\": \"Rio de Janeiro\", \"coordinates\": (-22.9068, -43.1729)}\n",
        "]\n",
        "\n",
        "index = 0\n",
        "print(\"Coordinates until a negative latitude is found:\")\n",
        "while index < len(coordinates):\n",
        "    # Access the coordinates tuple directly from the dictionary\n",
        "    lat, lon = coordinates[index][\"coordinates\"]\n",
        "    if lat < 0:\n",
        "        print(f\"Found coordinate with negative latitude: ({lat}, {lon}). Stopping.\")\n",
        "        break\n",
        "    else:\n",
        "        print(f\"Processing coordinate: ({lat}, {lon})\")\n",
        "    index += 1"
      ],
