        "import random\n",
        "\n",
        "print(\"Generating random coordinates until both latitude and longitude are greater than 50:\")\n",
        "\n",
        "while True:\n",
        "    latitude = random.uniform(-90, 90)  # Latitude ranges from -90 to 90\n",
        "    longitude = random.uniform(-180, 180) # Longitude ranges from -180 to 180\n",
        "    print(f\"Generated coordinate: (Latitude: {latitude:.2f}, Longitude: {longitude:.2f})\")\n",
        "\n",
        "    if latitude > 50 and longitude > 50:\n",
        "        print(f\"Found coordinate with both latitude ({latitude:.2f}) and longitude ({longitude:.2f}) greater than 50. Stopping.\")\n",
        "        break"
